<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps"
    android:orientation="vertical"
    tools:context=".ContactActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_marginEnd="6dp"
                android:layout_alignParentStart="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_marginTop="44dp"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/back"
                android:layout_alignParentStart="true"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/oganilir"
                app:civ_border_width="1dp"
                app:civ_border_color="#FFFFFF"/>


            <TextView
                android:layout_below="@id/back"
                android:layout_toEndOf="@+id/profile_image"
                android:id="@+id/judul"
                android:layout_marginStart="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="RSUD Kab. Ogan Ilir"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/subjudul"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_below="@+id/judul"
                android:text="Rumah Sakit di Indonesia"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:paddingBottom="12dp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/rating"
                android:layout_below="@+id/subjudul"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:text="Rating 4.4 dari 5.0 | 12 Reviews"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/hours"
                android:layout_below="@+id/rating"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_marginTop="6dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="48dp"
                android:text="Buka 24 Jam"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/phone1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_phone" />

            <TextView
                android:id="@+id/phone_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_toEndOf="@+id/phone1"
                android:paddingTop="12dp"
                android:paddingBottom="6dp"
                android:text="(0711) 7583023"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/desc_phone_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_number1"
                android:layout_marginStart="48dp"
                android:layout_toEndOf="@+id/phone1"
                android:text="Telepon Kantor"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp">

            <ImageView
                android:id="@+id/phone2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_phone"/>

            <TextView
                android:layout_toEndOf="@+id/phone2"
                android:id="@+id/phone_number2"
                android:layout_marginStart="48dp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp"
                android:text="0812-7823-404"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_toEndOf="@+id/phone2"
                android:layout_below="@+id/phone_number2"
                android:id="@+id/desc_phone_number2"
                android:layout_marginStart="48dp"
                android:text="Telepon Kantor"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <ImageView
                android:id="@+id/location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="48dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_toEndOf="@+id/location"
                android:paddingBottom="6dp"
                android:text="Tanjung Sejaro, Indralaya,Ogan Ilir Regency, Sumatra Selatan, 30814"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/desc_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_location"
                android:layout_marginStart="48dp"
                android:layout_toEndOf="@+id/location"
                android:text="Alamat Kantor"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>